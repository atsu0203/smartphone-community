.field#error
= render 'layouts/error_messages', model: form.object
%br
.field
  = form.label :name
  %br
  %i.exp 最大16文字
  %br
  = form.text_field :name, placeholder: "   記事タイトル", class:"form",id:"name"

.field
  .field__category
    = form.label :category, class: 'listing-default__label'
    %br/
    %span.listing-default
    .listing-select
      .listing-select__box
        = form.select :category, @category_parent_array, {}, {class: 'listing-select__box--select', id: 'parent_category'}
        %i.fas.fa-chevron-down.listing-select__box--arrow-down
        %br
        %br

.post-image
  %br
  %img#post_img_prev.hidden{:src => "#"}/
  - if @post.image.present?
    = image_tag @post.image.to_s, class: 'post_present_img'
  - else
    = image_tag 'no_image.png', class: 'post_present_img'
    = form.hidden_field :image_cache
  .field
    = form.file_field :image, id:"post_img", class: "form"


.field
  = form.label :text
  %br
  %i.exp＃を使ってタグを付けることができます
  %br  
  = form.text_area :text, placeholder: "（例）このスマホの良い所は○○です。                     　                                      　#便利スマホ" , rows: "10", class:"form", id: "text"
  %br
  
  %br
  %br
.field
  = form.submit "投稿する", class:"btn"
