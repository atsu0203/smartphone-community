.card
  .devise
    %h2 ログイン
    = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class:"form"
      .field 
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "off", class:"form"
      - if devise_mapping.rememberable?
        .field
          = f.label :パスワードを記憶させる
          %br/
          = f.check_box :remember_me, class:"user-form"
      .actions
        = f.submit "ログイン", class:"btn"
      .field
        ゲストとしてログインする（閲覧用）  
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          =f.hidden_field :email ,value: "guest@example.com"
          =f.hidden_field :password ,value: "guest1234"
        .actions
          = f.submit "ゲストログイン", class:"btn"
